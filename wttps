console.log('Atalhos de teclado: Alt+1 (São Carlos), Alt+2 (Milagres), Alt+3 (Igreja), Alt+4 (Galeria), Alt+5 (Jovens)');
console.log('🔥 Aba Jovens com recursos interativos carregada!');

